{
  "name": "ss-2",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/nextjs",
      "packages/hardhat"
    ]
  },
  "scripts": {
    "account": "yarn workspace @ss-2/hardhat account",
    "chain": "yarn workspace @ss-2/hardhat chain",
    "compile": "yarn workspace @ss-2/hardhat compile",
    "deploy": "yarn workspace @ss-2/hardhat deploy",
    "flatten": "yarn workspace @ss-2/hardhat flatten",
    "fork": "yarn workspace @ss-2/hardhat fork",
    "format": "yarn next:format && yarn hardhat:format",
    "generate": "yarn workspace @ss-2/hardhat generate",
    "hardhat-verify": "yarn workspace @ss-2/hardhat hardhat-verify",
    "hardhat:format": "yarn workspace @ss-2/hardhat format",
    "hardhat:lint": "yarn workspace @ss-2/hardhat lint",
    "hardhat:lint-staged": "yarn workspace @ss-2/hardhat lint-staged",
    "hardhat:test": "yarn workspace @ss-2/hardhat test",
    "postinstall": "husky install",
    "next:build": "yarn workspace @ss-2/nextjs build",
    "next:check-types": "yarn workspace @ss-2/nextjs check-types",
    "next:format": "yarn workspace @ss-2/nextjs format",
    "next:lint": "yarn workspace @ss-2/nextjs lint",
    "next:serve": "yarn workspace @ss-2/nextjs serve",
    "precommit": "lint-staged",
    "prepare": "install-self-peers -- --ignore-scripts",
    "start": "yarn workspace @ss-2/nextjs dev",
    "test": "yarn hardhat:test",
    "vercel": "yarn workspace @ss-2/nextjs vercel",
    "vercel:yolo": "yarn workspace @ss-2/nextjs vercel:yolo",
    "verify": "yarn workspace @ss-2/hardhat verify"
  },
  "resolutions": {
    "usehooks-ts@^2.7.2": "patch:usehooks-ts@npm:^2.7.2#./.yarn/patches/usehooks-ts-npm-2.7.2-fceffe0e43.patch"
  },
  "devDependencies": {
    "husky": "~8.0.3",
    "lint-staged": "~13.2.2",
    "next": "~14.0.4",
    "vercel": "~32.4.1"
  },
  "packageManager": "yarn@3.2.3",
  "engines": {
    "node": ">=18.17.0"
  }
}
